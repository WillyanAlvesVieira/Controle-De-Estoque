@model ControleDeEstoque.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h2 class="text-start"></h2>
<div class="container">
    <div class="row">
        <h3 class="titulo">Entrar no Sistema</h3>
    </div>
    <div class="row">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Conta", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, null, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="form-group">
                    <label for="Usuario">Usuário</label>
                    @Html.TextBoxFor(model => model.Usuario, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="Senha">Senha</label>
                    @Html.PasswordFor(model => model.Senha, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                </div>

                <div class="form-check">
                    @Html.CheckBoxFor(model => model.LembrarMe, new { @class = "form-check-input" })
                    <label class="form-check-label" for="LembrarMe">Lembrar-me</label>
                </div>

                <button type="submit" class="btn btn-primary">Entrar</button>
            }
        </section>
    </div>
</div>
